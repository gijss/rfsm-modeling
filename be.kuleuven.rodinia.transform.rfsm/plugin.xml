<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <command
            name="Create Structural Code"
            id="be.kuleuven.rodinia.transform.rfsm.command.structure">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="be.kuleuven.learning.simplefsm.transform.command.structure"
            class="be.kuleuven.rodinia.transform.rfsm.handler.StructureHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="be.kuleuven.rodinia.transform.rfsm.command.structure"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="rFSM"
               id="be.kuleuven.rodinia.transform.rfsm.menu.sfsm">
            <command
                  commandId="be.kuleuven.rodinia.transform.rfsm.command.structure"
                  mnemonic="S"
                  id="be.kuleuven.rodinia.transform.rfsm.menus.structure">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="be.kuleuven.rodinia.transform.rfsm.toolbars.sfsmoolbar">
            <command
                  commandId="be.kuleuven.rodinia.transform.rfsm.commands.generate"
                  icon="icons/sample.gif"
                  tooltip="Generate Source Code"
                  id="be.kuleuven.rodinia.transform.rfsm.toolbars.generate">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
